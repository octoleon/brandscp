head
  meta name="viewport" content="width=device-width, initial-scale=1.0"
  title= content_for?(:title) ? yield(:title) : "App"
  meta content=(content_for?(:description) ? yield(:description) :"App") name="description"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lato:100,300,400,700"
    = stylesheet_link_tag "plugins", :media => "all"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
  = render 'layouts/icons'

body class="empty-layout #{controller_name} #{action_name}"

  .container-fluid
    .row-fluid
      div.span12
        .box-content
          .tab-pane.active
            .row-fluid
              .span12

                div
                    = render 'layouts/messages'
                    = yield
| </html>