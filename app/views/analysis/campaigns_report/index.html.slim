= render_navigation(renderer: :bootstrap, level: 2, skip_if_empty: true, nav_class: 'nav-tabs')
.tab-content
  #list-view.tab-pane.active
    .details_box.first
      .controls

        = simple_form_for :report, url: analysis_campaigns_report_path, remote: true do |f|
          = f.input_field :campaign_id, collection: @campaigns, wrapper: false, class: 'chosen-enabled no-validate'

  #report-container

javascript:
  $('#report_campaign_id').on('change', function(e){
    if ( $(this).val() ){
      $(this.form).submit();
    }
  });