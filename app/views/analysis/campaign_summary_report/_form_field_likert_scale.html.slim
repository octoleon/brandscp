span.form-result-label= form_field.kpi.present? ? form_field.kpi.name : form_field.name
- result.each do |statement|
  div.form-result.pdf-keeptogether class="result_percentage"
    span.form-result-label= statement[1]
    - if result.any?
      .chart-area id="percentage-chart-#{statement[0]}"

    javascript:

      // Build the chart
      $('#percentage-chart-#{statement[0]}').highcharts({
          credits: false,
          colors: #{['#909090','#90bf43','#d93f99','#d7a23c','#606060','#d3c941','#a18740','#6c5f3c','#a766cf','#7e42a4','#7ca63a','#3e9ccf','#3881a8','#de4d43','#bbbbbb'].shuffle.to_json.html_safe},
          chart: {
              plotBackgroundColor: null,
              plotBorderWidth: null,
              plotShadow: false,
          },
          title: {
              text: false
          },
          legend: {
              verticalAlign: 'middle',
              layout: 'vertical',
              align: 'right',
              itemMarginBottom: 10,
              symbolWidth: 12,
              borderWidth: 0,
              itemStyle: {
                fontWeight: 'normal'
              }
          },
          tooltip: {
              pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
          },
          plotOptions: {
              pie: {
                  allowPointSelect: false,
                  cursor: 'pointer',
                  dataLabels: {
                      enabled: false
                  },
                  showInLegend: true
              },
              series: {
                  dataLabels: {
                      enabled: true,
                      formatter: function() {
                          return Math.round(this.percentage*100)/100 + '%';
                      },
                      distance: -30,
                      color:'white'
                  }
              }
          },
          series: [{
              type: 'pie',
              name: '#{j statement[1]}',
              data: #{statement[2].to_json.html_safe}
          }]
      });
