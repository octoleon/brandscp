.main.no-margin
  .tab-content
    - if can?(:view_event_status, Campaign) || can?(:view_gva_report, Campaign)
    #global-reports-list.resource-list.reports-list
      - if jbb_feature_enabled? && can?(:attendance, Event)
          .resource-item id="report_activity_data"
            = link_to analysis_attendance_path, title: 'Attendance by Neighborhood' do
              .span10.report-item
                .text-large Attendance by Neighborhood
                p View event attendance by neighborhood

      - if can?(:view_event_status, Campaign)
          .resource-item id="report_event_status"
            = link_to analysis_event_status_path, title: 'Event Status' do
              .span10.report-item
                .text-large Event Status
                p View progress of event and promo hours against goals

      - if can?(:view_gva_report, Campaign)
          .resource-item id="report_gva"
            = link_to analysis_gva_path, title: 'Goals vs. Actual' do
              .span10.report-item
                .text-large Goals vs. Actual
                p View results relative to campaign goals

      - if can?(:access, :trends_report)        
        .resource-item id="report_trends_tracker"
          = link_to sources_analysis_trends_path, title: 'Trends Tracker' do
            .span10.report-item
              .text-large Trends Tracker
              p Explore and identify trends for your campaigns
      - if can?(:campaign_summary_report, Campaign)        
        .resource-item id="report_campaign_summary"
          = link_to analysis_campaign_summary_report_path, title: 'Campaign Summary' do
            .span10.report-item
              .text-large Campaign Summary
              p View Campaign Summary

    

      